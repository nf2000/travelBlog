
<div class="header">
<div class="container">
  <h2 >Create a comment</h2>
  <p class ="tagline-new"> Please create your comment</p>
</div>
</div>
<div class="create">
<div class="container">
  
        <%= form_with model: @comment do |form| %> 
        <div class="row">

        <div class="col-sm-3">
            <%= form.label :comment %>
            <%= form.text_area :comment, class: "form-control form-control-sm", rows: "6", :required => true %> <br> 
        </div> 
    
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <%= form.submit "Submit Comment", class: " btn btn-primary me-md-5 btn btn-primary btn-sm" %>
            <%= form.hidden_field :post_id, value: "#{params[:post_id]}" %>
            </div>
    <% end %> 
</div>
</div>
        


 