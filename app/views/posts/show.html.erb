<div class="main blog-post">
  <div class="container">
    
    <div class="specfic-post">
      <h2 class="display-3"><%= @post.title %> </h2> <br>
        <div class="info">
          <p class="lead"> By <%= @post.author %>  </p>
          <ul class="list-inline">
            <li class="list-inline-item">Category: <%= @post.category %> </li> 
            <li class="list-inline-item">Created at: <%= @post.created_at%></li>
          </ul> 
          </div>
      <p class="content"><%= @post.content %> </p>
    </div>
  
    </div>
      <div class="col-sm-2 ms-auto text-center">
      <div class="dropdown">
      <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        Dropdown Menu
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1" >
        <div class="d-grid gap-3 col-8 ">
        <a class="dropdown-item"><%= link_to"Delete", post_path(@post), method: :delete, data:{confirm: 'Are you sure you wish to delete this blog?'}, class: 'btn btn-dark btn-sm ' %></a>
        <a class="dropdown-item"><%= link_to "Edit", edit_post_path(@post), class: 'btn btn-dark btn-sm '%></a>
        <a class="dropdown-item"><%= link_to "Add Comment", new_post_comment_path(@post), class: 'btn btn-dark btn-sm '%></a>
        </div>
      </ul>
    </div>
    </div>
    <div class = comment-section>
      <div class="row d-flex p-2 justify-content-center">
        <div class="d-block p-2 bg-dark text-white">
            <h3> Comment Section </h3>
        </div>
          <div class="col-sm-8 col-lg-8">
            <% @comments.each do |comment| %>
            <div class="card shadow-0 border" style="background-color: #f0f2f5;">
                <div class="card mb-2">
                  <div class="card-body">
                    <div class="d-flex justify-content-between">
                      <div class="d-flex flex-row align-items-center">
                        <p class="small text-muted mb-0"><%= comment.name%>:</p>
                      </div>
                      <div class="d-flex flex-row align-items-center">     
                        <p class="small text-muted mb-0">"<%= comment.comment%> "</p>
                      </div>
                      <div class="d-flex flex-row align-items-center">
                        <p class="small text-muted mb-0"><%= comment.created_at%></p>
                      </div>
                    </div>
                  </div>
                </div>
                <%end%>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>

    



